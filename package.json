    "typescript",
    "bitcoin",
    "decentralized"
  ],
  "author": "Bigtangle Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigtangle/bigtangle-ts.git"
  },
  "bugs": {
    "url": "https://github.com/bigtangle/bigtangle-ts/issues"
  },
  "homepage": "https://github.com/bigtangle/bigtangle-ts#readme",
  "devDependencies": {
    "@types/asn1js": "^3.0.6",
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^30.0.0",
    "@types/jsbn": "^1.2.33",
    "@types/node": "^24.1.0",
    "@types/secp256k1": "^4.0.7",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "picomatch": "^4.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
