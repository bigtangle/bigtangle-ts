    "lint": "eslint . --ext .ts,.js --fix --ignore-pattern 'debug*.ts' --ignore-pattern 'test/**' --ignore-pattern 'dist/**' --ignore-pattern '*.mjs' --ignore-pattern 'temp_method.ts'"
  },
  "dependencies": {
    "axios": "^1.1.0",
    "ws": "^8.18.0",
    "socket.io": "^4.8.0",
