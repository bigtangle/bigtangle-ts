{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./"
  },
  "include": [
    "src/debug-block-test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}